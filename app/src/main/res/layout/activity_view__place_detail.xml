<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Place_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="#ffffff">



                <ImageView
                    android:id="@+id/place_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_add_calaneder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:shadowColor="#000000"
                    android:src="@drawable/cal_v"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="50"
                 />
                <ImageView
                    android:id="@+id/img_add_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                  android:layout_marginTop="22dp"
                    android:src="@drawable/fav_v"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="50"
                    />


            </LinearLayout>
        </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/placename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/opensans_regular"
            android:lineHeight="21dp"
            android:textColor="#000000"
            android:textFontWeight="700"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Description/About"
            android:textColor="#000000"
            android:textFontWeight="600"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/placedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#000000"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/opensans_semibold"
            android:lineHeight="22dp"
            android:text="Reviews"
            android:textColor="#000000"
            android:textFontWeight="600"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ellipse4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lastreview_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/lastreview_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews" />

                <TextView
                    android:id="@+id/all_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Read All Reviews"
                    android:textColor="#000000"
                    android:textFontWeight="600"
                    android:textSize="22dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Nearby Hotels"
            android:textColor="#000000"
            android:textFontWeight="600"
            android:textSize="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularDesRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />


    </LinearLayout>



</ScrollView>