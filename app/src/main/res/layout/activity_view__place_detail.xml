<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Place_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/placename"
            android:fontFamily="@font/opensans_regular"
            android:textFontWeight="700"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:lineHeight="21dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textFontWeight="600"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#000000"
            android:text="Description/About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/placedesc"
            android:textFontWeight="400"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Reviews"
            android:textFontWeight="600"
            android:layout_marginLeft="16dp"
            android:lineHeight="22dp"
            android:textSize="16dp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ellipse4"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lastreview_name"

                    android:text="Reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RatingBar
                    android:numStars="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/lastreview_text"
                    android:text="Reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/all_reviews"
                    android:textSize="22dp"
                    android:fontFamily="@font/opensans_regular"
                    android:textFontWeight="600"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Read All Reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




        </LinearLayout>


        <TextView
            android:fontFamily="@font/opensans_regular"
            android:textFontWeight="600"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="Nearby Hotels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>